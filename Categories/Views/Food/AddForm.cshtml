@{
    Layout = "_Layout";
}

<div class="container">
  <div class="jumbotron">
    <h1>Enter your food item!</h1>
  </div>
    <form class="form" action="/food/add" method="post">
        <div class="form-group">
          <label for="name">Enter the name of the food</label>
          <input type="text" name="name">
        </div>
        <div>
            <label for="category">Choose a category</label>
            <select class="form-group" name="category">
                <option value="1">Vegetable</option>
                <option value="2">Fruit</option>
                <option value="3">Protein</option>
                <option value="4">Grain</option>
                <option value="5">Dairy</option>
                <option value="6">Sugar</option>
                <option value="7">Fat</option>
                <option value="8">Water</option>
            </select>
        </div>
      <button type="submit" class="btn btn-primary" name="button">Add New Food</button>
    </form>
</div>